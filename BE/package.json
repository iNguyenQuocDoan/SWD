{
    "name": "marketplace-be",
    "version": "1.0.0",
    "description": "Backend API for Digital Marketplace",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:nodemon": "nodemon --watch src --ext ts --exec tsx src/index.ts",
        "build": "tsc && tsc-alias -p tsconfig.json",
        "start": "node dist/index.js",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit",
        "seed:users": "tsx src/scripts/seed-users.ts",
        "force:topup-success": "tsx src/scripts/force-topup-success.ts"
    },
    "keywords": [
        "marketplace",
        "api",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/multer": "^2.0.0",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.9.0",
        "cloudinary-core": "^2.14.0",
        "compression": "^1.7.5",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^7.4.1",
        "express-validator": "^7.2.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^9.1.4",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "slugify": "^1.6.6",
        "socket.io": "^4.8.3",
        "swagger-ui-express": "^5.0.1",
        "tsconfig-paths": "^4.2.0",
        "yamljs": "^0.3.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.2",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/yamljs": "^0.2.34",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "nodemon": "^3.1.11",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    }
}
